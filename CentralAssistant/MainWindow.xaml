<Window x:Class="CentralAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:draw="clr-namespace:System.Drawing;assembly=System.Drawing"
        xmlns:local="clr-namespace:CentralAssistant"
        mc:Ignorable="d"
        Title="Central Assistant" Height="450" Width="800" Background="#001C1F3B" ScrollViewer.HorizontalScrollBarVisibility="Auto" UseLayoutRounding="True" WindowStyle="None">
    <Border CornerRadius="10" BorderBrush="Black" BorderThickness="2" Padding="6" Background="#FF1C1F3B">
        <Grid UseLayoutRounding="True">
            <TabControl Background="#FF1C1F3B" UseLayoutRounding="True" BorderBrush="#00ACACAC" Foreground="#FF1C1F3B">
                <TabItem Header="Home" UseLayoutRounding="True" Background="#FF1C1F3B" BorderBrush="#FF777777" Foreground="White" IsSelected="True">
                    <Grid Background="#FF282C4D">
                        <Grid>
                            <Border BorderBrush="Black" BorderThickness="1" Width="200" Height="100" HorizontalAlignment="Right" VerticalAlignment="Top" CornerRadius="25,25,25,25" Margin="0,20,20,0"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Audio" UseLayoutRounding="True" Background="#FF1C1F3B" BorderBrush="#FF777777" Foreground="White">
                    <Grid Background="#FF282C4D"/>
                </TabItem>
                <TabItem Header="Games" UseLayoutRounding="True" Background="#FF1C1F3B" BorderBrush="#FF777777" Foreground="White">
                    <Grid Background="#FF282C4D"/>
                </TabItem>
            </TabControl>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:Name="MinimizeButton" Content="—" Width="40" Height="20" Foreground="White" FontWeight="Bold" Click="MinimizeButton_Click" Background="#FF1C1F3B" BorderBrush="#FF1C1F3B" FontFamily="Segoe UI Variable Display Light"/>
                <Button x:Name="MaximizeRestoreButton" Content="▢" Width="40" Height="20" Background="#FF1C1F3B" Foreground="White" FontWeight="Bold" Click="MaximizeRestoreButton_Click" BorderBrush="#FF1C1F3B" FontFamily="Segoe UI Variable Display Light"/>
                <Button x:Name="CloseButton" Content="X" Width="40" Height="20" Background="#FF1C1F3B" Foreground="White" FontWeight="Bold" Click="CloseButton_Click" BorderBrush="#FF1C1F3B" FontFamily="Segoe UI Variable Display Light"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
